<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl_Container"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newscard">


            <ImageView
                android:contentDescription="sample"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:src="@drawable/ic_launcher_foreground"
                android:id="@+id/cardImage_IV" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/card_label_tv"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/card_news_tv"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/card_reporter_tv"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@android:color/darker_gray"
                android:gravity="center|bottom">
                <ImageView
                    android:contentDescription="paly btn"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/ic_play"
                    android:id="@+id/play_IV"
                    android:onClick="play_news"
                    android:background="@android:color/white"
                     />

            </LinearLayout>



</LinearLayout>